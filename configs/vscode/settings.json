{
  // Theme
  "window.systemColorTheme": "auto",
  "window.autoDetectColorScheme": true,
  "workbench.iconTheme": "catppuccin-latte",
  "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "window.commandCenter": false,
  "window.dialogStyle": "custom",

  // Catppuccin customizations
  "catppuccin.bracketMode": "neovim",
  "catppuccin.italicComments": true,
  "catppuccin.italicKeywords": true,
  "catppuccin.extraBordersEnabled": true,

  // Editor configs
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": false,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 3,
  "editor.stickyScroll.scrollWithEditor": false,

  // Config per la zen mode
  "zenMode.centerLayout": false,
  "zenMode.hideActivityBar": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.restore": false,
  "zenMode.showTabs": "none",
  "zenMode.fullScreen": true,
  "zenMode.hideStatusBar": true,
  "zenMode.silentNotifications": false,

  "editor.formatOnSaveMode": "modifications",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
  },

  // Java configs
  "java.compile.nullAnalysis.mode": "automatic",
  "quarkus.tools.debug.terminateProcessOnExit": "Always terminate",
  "quarkus.tools.alwaysShowWelcomePage": false,

  // Vim configs
  "vim.smartRelativeLine": true,
  "vim.autoindent": true,
  "vim.leader": " ",
  "vim.vimrc.path": "~/.config/code.vimrc",
  "vim.vimrc.enable": true,
  "vim.useSystemClipboard": true,

  // Explorer
  "explorer.autoReveal": true,
  "explorer.compactFolders": true,
  "explorer.decorations.badges": false,
  "explorer.autoOpenDroppedFile": false,
  "explorer.excludeGitIgnore": true,
  "workbench.editor.enablePreview": false,
  "workbench.list.openMode": "doubleClick",
  "workbench.list.smoothScrolling": true,
  "workbench.activityBar.location": "bottom",

  // Git configurations
  "git.autofetch": true,
  "git.autofetchPeriod": 180,
  "git.fetchOnPull": true,
  "git.autorefresh": true,
  "diffEditor.codeLens": true,
  "diffEditor.renderSideBySide": true,

  "debug.inlineValues": "on",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Telemetria
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "error",
  "gitlens.telemetry.enabled": false,
  "sqldeveloper.telemetry.enabled": false,

  "json.maxItemsComputed": 10000,
  "yaml.maxItemsComputed": 10000,
  "explorer.confirmDelete": false,

  // Minimap configuration
  "editor.minimap.renderCharacters": false,
  "editor.minimap.size": "fit",
  "editor.minimap.showSlider": "always",
  "editor.minimap.maxColumn": 80,
  "editor.minimap.autohide": true
}

